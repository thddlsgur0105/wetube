mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer 
        video(src=`/${video.src}`, autoplay)
        .videoPlayer__controls 
            .videoPlayer__column
                input.videoPlayer__volumn#jsVolumn(type="range", min="0", max="1", step="0.1", value="0.5") 
                span#jsVolumnBtn 
                    i.fas.fa-volume-up
                span 
                    span#currentTime 00:00:00
                    |/
                    span#totalTime 00:00:00
            .videoPlayer__column
                span#jsPlayButton 
                    i.fas.fa-play
            .videoPlayer__column
                span#jsFullScreen 
                    i.fas.fa-expand